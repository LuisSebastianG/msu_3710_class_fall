<%= form_with(url: students_path, method: :get, local: true, class: "form-inline") do |form| %>

  <div class="form-group">
    <%= form.label :major, "Select Major", class: "form-label", aria: {label: 'Select Major'} %>
    <%= form.select :major, options_for_select(Student::VALID_MAJORS),{prompt: "Any Major"}, name: 'search[major]', class: "form-control", aria: {label: 'Select Major'} %>
  </div>

  <div class="form-group">
    <%= form.label :graduation_date, 'Graduation Date', class: "form-label" %>
    <%= form.date_field :graduation_date, name: 'search[graduation_date]', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :filter_type, 'Filter By', class: 'form-label d-block' %>
    <%= form.radio_button :filter_type, 'any', class: 'form-check-input', checked: true %> Any
    <%= form.radio_button :filter_type, 'before', class: 'form-check-input' %> Before
    <%= form.radio_button :filter_type, 'after', class: 'form-check-input' %> After
  </div>

  <div class="form-group">
    <%= form.submit "Search", class: "btn btn-dark", aria: {label: 'Search'} %>
  </div>

<% end %>

<%= link_to 'Show All', students_path(show_all: true), class: "btn btn-info" %>
